package controller;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.SQLException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import model.Model;

public class ChangePassword extends HttpServlet {
	int attempt=0;
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		HttpSession session=request.getSession();
		Model model=new Model();
		model.setAccno((int)session.getAttribute("accno"));
		model.setPwd(request.getParameter("opwd"));
		session.setAttribute("attempt", ++attempt);
		boolean value;
		try {
			value=model.changePassword(request.getParameter("npwd"));
			if(value)
			{
				attempt=0;
				session.setAttribute("attempt", attempt);
				session.invalidate();
				response.sendRedirect("/JPMORGAN/resetsuccess.html");
			}
			else
			{
				if((int)session.getAttribute("attempt")==3)
				{
					session.invalidate();
					((HttpServletResponse)(response)).sendRedirect("/JPMORGAN/index.html");
				}
				else
				
					((HttpServletResponse)(response)).sendRedirect("/JPMORGAN/resetfail.html");
			}
		}
		catch (SQLException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
		}	
	}
}
